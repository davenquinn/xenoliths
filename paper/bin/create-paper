#!/usr/bin/env zsh
dir=$PROJECT_DIR/versioned/paper
cd $dir

# Collect figures
bin/collect-figures

body='build/body.tex'

# Process body text
paper create-body \
  --inline-figures text/includes.yaml \
  --figure-captions text/figure-captions.md \
  text/body.md $body
# Process abstract
paper create-body text/abstract.md build/abstract.tex

auxfile=build/main.aux
# build citations
bibtex $auxfile
# Filter bibliography
LIBRARY=/Users/Daven/Resources/Papers/bibtex/library.bib
bib-filter --clean --aux $auxfile $LIBRARY
# rebuild citations
bibtex $auxfile

xelatex \
    -interaction=nonstopmode \
    -output-directory build "source/main.tex"

mv build/main.pdf output/Quinn-2016-xenoliths.pdf
