text
  font-family: "Gotham", sans-serif

.monterey-plate.annotation
  font-size: 8
  font-style: italic
  text-anchor: middle

.u-scale
  text, .tick text
    font-size: 7
    fill: #888888
    font-weight: 500

.x.axis
  .label
    fill: black

.oc-age, .oc-age-label
  font-size: 7
  font-style: italic

.tick text
  font-size: 9
  font-weight: 300

.axes .tick text
  font-size: 8

.legend
  text
    fill: #444
    font-size: 8
    font-weight: 300
  text.title
    font-weight: bold
  line
    stroke: #444
    stroke-width: 1
