div.scenario
  margin-top: 0.5em

text
  font-family: Gotham, sans-serif
  font-weight: 500
  font-size: 10

.santa-lucia-label
  color: #444
  font-size: 8
  font-family: 'Helvetica Neue'

div
  font-family: Gotham, sans-serif

h1
  font-family: Gotham, sans-serif
  font-size: 16px
  padding-left: 6px
  font-weight: 400
  .subtitle
    font-weight: 200

.xaxis text
  font-size: 8
  baseline-shift: -1.2em
  text-anchor: middle
  fill: #666666
  font-weight: 300

.yaxis text
  font-weight: 300

head()
  font-weight: 300
  display: inline-block
  margin-bottom: 0.2em
  margin-top: 0.5em

.axis-labels
  h2
    head()
    text-transform: uppercase
    font-size: 10
    font-weight: 600

.age-labels
  h3
    font-size: 12
    font-style: italic
    head()

.axis .data textPath
  stroke: none
  font-weight: 500
  font-size: 7
  &.label
    font-weight: 300
  &.oc-age
    font-style: italic
    font-weight: 300

