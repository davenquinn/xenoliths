text
  font-family: Gotham
  fill: black

rect.backdrop
  fill: #eee

.y
  text.label
    font-size: 10
    text-anchor: middle
  .tick text
    font-size: 8
    alignment-baseline: bottom
    text-anchor: middle
  &.temperature
    .tick text
      transform: rotate(-90deg) translate(5px, -8px)

tspan.sub
  alignment-baseline: hanging
  font-size: 0.65em

.system-label
  text-anchor: middle
  font-size: 10
  fill: #444

.sample-label
  font-size: 10
  alignment-baseline: middle
  transform: translate(3px, 0)
  &.CK-5
    transform: translate(3px, 6px)

.system-type-label
  font-size: 8
  font-style: italic
  fill: #666
  text-transform: uppercase
  font-weight: 500

#main
  background-color: white
